{
  "kind": "collectionType",
  "collectionName": "project_pages",
  "info": {
    "singularName": "project-page",
    "pluralName": "project-pages",
    "displayName": "Project Page"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "Title": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string",
      "required": true,
      "unique": true
    },
    "MainImage": {
      "allowedTypes": ["images"],
      "type": "media",
      "multiple": false,
      "required": false
    },
    "Introduction": {
      "type": "richtext"
    },
    "ContentArea": {
      "type": "dynamiczone",
      "components": ["blocks.text-block"]
    }
  }
}
